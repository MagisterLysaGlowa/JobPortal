<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="JobPortal.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:JobPortal.Maui"
    xmlns:pages="clr-namespace:JobPortal.Maui.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Welcome Page"
        ContentTemplate="{DataTemplate pages:WelcomePage}"
        Route="welcomePage"
        Shell.FlyoutBehavior="Disabled"
        Shell.FlyoutItemIsVisible="False" />
    <ShellContent
        Title="Login Page"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="loginPage"
        Shell.FlyoutBehavior="Disabled"
        Shell.FlyoutItemIsVisible="False" />
    <ShellContent
        Title="Register Page"
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Route="registerPage"
        Shell.FlyoutBehavior="Disabled"
        Shell.FlyoutItemIsVisible="False" />
    <ShellContent
        Title="Home Page"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="homePage" />
</Shell>
