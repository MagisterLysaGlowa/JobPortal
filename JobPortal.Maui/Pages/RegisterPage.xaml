<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="JobPortal.Maui.Pages.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:JobPortal.Maui.ViewModels"
    xmlns:controlls="clr-namespace:JobPortal.Maui.Controlls"
    Title="RegisterPage"
    x:DataType="viewmodels:RegisterPageViewModel">
    <ContentPage.Resources>
        <Style TargetType="Border" x:Key="EntryBorder">
            <Setter Property="StrokeShape" Value="RoundRectangle 10,10,10,10"/>
            <Setter Property="Stroke" Value="Red"/>
            <Setter Property="StrokeThickness" Value="2"/>
        </Style>
    </ContentPage.Resources>
    <StackLayout
        x:Name="registerStackPanel"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="Center">
        <Label Text="{Binding Step}" />
        
        <!--NAME AND SURNAME FRAME-->
        
        <Frame
            x:Name="frameBox1"
            BorderColor="Black"
            CornerRadius="20"
            MaximumWidthRequest="400">
            <VerticalStackLayout
                Padding="0,30,0,30"
                Spacing="20"
                VerticalOptions="Center">
                
                <!--NAME ENTRY-->
                <Border Style="{StaticResource EntryBorder}">
                    <controlls:BorderlessEntry HeightRequest="60" Placeholder="Imię" Text="{Binding Name}" >
                        <controlls:BorderlessEntry.Triggers>
                            <DataTrigger TargetType="Entry" Binding="{Binding NameError}" Value="True">
                                <Setter Property="TextColor" Value="Red"/>
                            </DataTrigger>
                        </controlls:BorderlessEntry.Triggers>
                    </controlls:BorderlessEntry>
                    <Border.Triggers>
                        <DataTrigger TargetType="Border" Binding="{Binding NameError}" Value="True">
                            <Setter Property="Stroke" Value="Red"/>
                        </DataTrigger>
                        <DataTrigger TargetType="Border" Binding="{Binding NameError}" Value="False">
                            <Setter Property="Stroke" Value="Gray"/>
                        </DataTrigger>
                    </Border.Triggers>
                </Border>
                
                
                <!--SURNAME ENTRY-->
                
                <Border Style="{StaticResource EntryBorder}">
                    <controlls:BorderlessEntry HeightRequest="60" Placeholder="Imię" Text="{Binding Surname}">
                        <controlls:BorderlessEntry.Triggers>
                            <DataTrigger TargetType="Entry" Binding="{Binding SurnameError}" Value="True">
                                <Setter Property="TextColor" Value="Red"/>
                            </DataTrigger>
                        </controlls:BorderlessEntry.Triggers>
                    </controlls:BorderlessEntry>
                    <Border.Triggers>
                        <DataTrigger TargetType="Border" Binding="{Binding SurnameError}" Value="True">
                            <Setter Property="Stroke" Value="Red"/>
                        </DataTrigger>
                        <DataTrigger TargetType="Border" Binding="{Binding SurnameError}" Value="False">
                            <Setter Property="Stroke" Value="Gray"/>
                        </DataTrigger>
                    </Border.Triggers>
                </Border>
                <Button
                    Command="{Binding NextStepCommand}"
                    CommandParameter="first"
                    HeightRequest="60"
                    Text="Następny krok" />
            </VerticalStackLayout>
            <Frame.Style>
                <Style TargetType="Frame">
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding Step}"
                            TargetType="Frame"
                            Value="0">
                            <Setter Property="IsVisible" Value="True" />
                        </DataTrigger>
                    </Style.Triggers>
                    <Style.Setters>
                        <Setter Property="IsVisible" Value="False" />
                    </Style.Setters>
                </Style>
            </Frame.Style>
        </Frame>

        <Frame
            x:Name="frameBox2"
            BorderColor="Black"
            CornerRadius="20"
            MaximumWidthRequest="400">
            <VerticalStackLayout
                Padding="0,30,0,30"
                Spacing="20"
                VerticalOptions="Center">
                <Entry HeightRequest="60" Placeholder="E-mail"  Text="{Binding Email}"/>
                <Entry HeightRequest="60" Placeholder="Numer telefonu"  Text="{Binding PhoneNumber}"/>
                <HorizontalStackLayout>
                    <Button
                        Command="{Binding PreviousStepCommand}"
                        CommandParameter="second"
                        HeightRequest="60"
                        Text="Poprzedni krok" />
                    <Button
                        CommandParameter="second"
                        Command="{Binding NextStepCommand}"
                        HeightRequest="60"
                        Text="Następny krok" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <Frame.Style>
                <Style TargetType="Frame">
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding Step}"
                            TargetType="Frame"
                            Value="1">
                            <Setter Property="IsVisible" Value="True" />
                        </DataTrigger>
                    </Style.Triggers>
                    <Style.Setters>
                        <Setter Property="IsVisible" Value="False" />
                    </Style.Setters>
                </Style>
            </Frame.Style>
        </Frame>

        <Frame
            x:Name="frameBox3"
            BorderColor="Black"
            CornerRadius="20"
            MaximumWidthRequest="400">
            <VerticalStackLayout
                Padding="0,30,0,30"
                Spacing="20"
                VerticalOptions="Center">
                <DatePicker HeightRequest="60" Date="{Binding DateOfBirth}"/>
                <Entry HeightRequest="60" Placeholder="Miejscowość"  Text="{Binding Location}"/>
                <HorizontalStackLayout>
                    <Button
                        Command="{Binding PreviousStepCommand}"
                        CommandParameter="third"
                        HeightRequest="60"
                        Text="Poprzedni krok" />
                    <Button
                        Command="{Binding NextStepCommand}"
                        CommandParameter="third"
                        HeightRequest="60"
                        Text="Następny krok" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <Frame.Style>
                <Style TargetType="{x:Type Frame}">
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding Step}"
                            TargetType="Frame"
                            Value="2">
                            <Setter Property="IsVisible" Value="True" />
                        </DataTrigger>
                    </Style.Triggers>
                    <Style.Setters>
                        <Setter Property="IsVisible" Value="False" />
                    </Style.Setters>
                </Style>
            </Frame.Style>
        </Frame>
    </StackLayout>
</ContentPage>