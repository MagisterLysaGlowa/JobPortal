<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="JobPortal.Maui.Pages.JobOfertPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controlls="clr-namespace:JobPortal.Maui.Controlls"
    xmlns:viewmodels="clr-namespace:JobPortal.Maui.ViewModels"
    Title="JobOfertPage"
    x:DataType="viewmodels:JobOfertPageViewModel"
    BackgroundColor="#F5F5F5"
    Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <Style x:Key="EntryBorder" TargetType="Border">
            <Setter Property="StrokeShape" Value="RoundRectangle 10,10,10,10" />
            <Setter Property="Stroke" Value="black" />
            <Setter Property="StrokeThickness" Value="2" />
        </Style>
    </ContentPage.Resources>
    <Grid Margin="0,80,0,0">
        <ScrollView>
            <Grid HorizontalOptions="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1200" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Frame
                    Grid.Row="0"
                    Grid.Column="1"
                    Padding="20"
                    BorderColor="black">
                    <VerticalStackLayout>
                        <Grid ColumnSpacing="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Text="Informacje o firmie" />

                            <VerticalStackLayout Grid.Row="1" Grid.Column="0">
                                <Label Text="Nazwa firmy" />
                                <Border Style="{StaticResource EntryBorder}">
                                    <controlls:BorderlessEntry
                                        HeightRequest="60"
                                        Placeholder="Nazwa firmy"
                                        Text="{Binding CompanyName}" />
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Row="1" Grid.Column="1">
                                <Label Text="Adres firmy" />
                                <Border Style="{StaticResource EntryBorder}">
                                    <controlls:BorderlessEntry
                                        HeightRequest="60"
                                        Placeholder="Adres firmy"
                                        Text="{Binding CompanyAddress}" />
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout
                                Grid.Row="2"
                                Grid.Column="0"
                                Grid.ColumnSpan="2">
                                <Label Text="Lokalizacja" />
                                <Border Style="{StaticResource EntryBorder}">
                                    <controlls:BorderlessEntry
                                        HeightRequest="60"
                                        Placeholder="Lokalizacja"
                                        Text="{Binding CompanyLocation}" />
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout
                                Grid.Row="3"
                                Grid.Column="0"
                                Grid.ColumnSpan="2">
                                <Label Text="Opis firmy" />
                                <Border Style="{StaticResource EntryBorder}">
                                    <Editor
                                        HeightRequest="60"
                                        Placeholder="Opis firmy"
                                        Text="{Binding CompanyDescription}" />
                                </Border>
                            </VerticalStackLayout>

                            <Label
                                Grid.Row="4"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Text="Opis stanowiska" />

                            <VerticalStackLayout Grid.Row="5" Grid.Column="0">
                                <Label Text="Nazwa stanowiska" />
                                <Border Style="{StaticResource EntryBorder}">
                                    <controlls:BorderlessEntry
                                        HeightRequest="60"
                                        Placeholder="Nazwa stanowiska"
                                        Text="{Binding PositionName}" />
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Row="5" Grid.Column="1">
                                <Label Text="Poziom stanowiska" />
                                <Border Style="{StaticResource EntryBorder}">
                                    <controlls:BorderlessEntry
                                        HeightRequest="60"
                                        Placeholder="Poziom stanowiska"
                                        Text="{Binding PositionLevel}" />
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout
                                Grid.Row="6"
                                Grid.Column="0"
                                Grid.ColumnSpan="2">
                                <Label Text="Rodzaj umowy" />
                                <Border Style="{StaticResource EntryBorder}">
                                    <Picker
                                        HeightRequest="60"
                                        ItemsSource="{Binding EmploymentContractOptionsList}"
                                        SelectedItem="{Binding EmploymentContract}" />
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Row="7" Grid.Column="0">
                                <Label Text="Wymiar zatrudnienia" />
                                <Border Style="{StaticResource EntryBorder}">
                                    <Picker
                                        HeightRequest="60"
                                        ItemsSource="{Binding EmploymentTypeList}"
                                        SelectedItem="{Binding EmploymentType}" />
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Row="7" Grid.Column="1">
                                <Label Text="Rodzaj pracy" />
                                <Border Style="{StaticResource EntryBorder}">
                                    <Picker
                                        HeightRequest="60"
                                        ItemsSource="{Binding JobTypeList}"
                                        SelectedItem="{Binding JobType}" />
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Row="8" Grid.Column="0">
                                <Label Text="WideÅ‚ki wynagrodzenia" />
                                <HorizontalStackLayout>
                                    <Border Style="{StaticResource EntryBorder}">
                                        <controlls:BorderlessEntry
                                            HeightRequest="60"
                                            Keyboard="Numeric"
                                            Placeholder="od"
                                            Text="{Binding SalaryMinimum}" />
                                    </Border>
                                    <Label Text="-" />
                                    <Border Style="{StaticResource EntryBorder}">
                                        <controlls:BorderlessEntry
                                            HeightRequest="60"
                                            Keyboard="Numeric"
                                            Placeholder="do"
                                            Text="{Binding SalaryMaximum}" />
                                    </Border>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Row="8" Grid.Column="1">
                                <Label Text="Godziny pracy" />
                                <HorizontalStackLayout>
                                    <Border Style="{StaticResource EntryBorder}">
                                        <TimePicker HeightRequest="60" Time="{Binding WorkStartHour}" />
                                    </Border>
                                    <Label Text="-" />
                                    <Border Style="{StaticResource EntryBorder}">
                                        <TimePicker HeightRequest="60" Time="{Binding WorkEndHour}" />
                                    </Border>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <VerticalStackLayout
                                Grid.Row="9"
                                Grid.Column="0"
                                Grid.ColumnSpan="2">
                                <Label Text="Okres rekrutacji do" />
                                <Border Style="{StaticResource EntryBorder}">
                                    <DatePicker Date="{Binding RecruitmentEndDate}" HeightRequest="60" />
                                </Border>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <Grid x:Name="categoryGrid" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource InfoBoxHeader}"
                        Text="Kategoria" />

                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Style="{StaticResource EntryBorder}">
                        <Picker
                            HeightRequest="60"
                            ItemsSource="{Binding CategoriesList}"
                            SelectedIndexChanged="CategoryPicker_Changed"
                            SelectedItem="{Binding CategoryChoice}" />
                    </Border>

                    <VerticalStackLayout
                        x:Name="categoryLayout"
                        Grid.Row="2"
                        Grid.Column="0">
                        <Border Style="{StaticResource EntryBorder}">
                            <controlls:BorderlessEntry
                                HeightRequest="60"
                                Placeholder="Nazwa kategorii"
                                Text="{Binding CategoryInput}" />
                        </Border>
                    </VerticalStackLayout>

                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Command="{Binding InsertCategoryCommand}"
                        HeightRequest="60"
                        Style="{StaticResource ProfilePageButton}"
                        Text="Dodaj kategorie"
                        WidthRequest="250" />
                </Grid>

                <VerticalStackLayout Grid.Row="2">
                    <ListView ItemsSource="{Binding JobOfertCategories}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <VerticalStackLayout>
                                        <Label Text="{Binding CategoryName}" />
                                    </VerticalStackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>

                <Grid Grid.Row="3" ColumnDefinitions="*,auto">
                    <VerticalStackLayout Grid.Column="0">
                        <Border Style="{StaticResource EntryBorder}">
                            <controlls:BorderlessEntry
                                HeightRequest="60"
                                Placeholder="Dodaj wymaganie"
                                Text="{Binding RequirementNameLocal}" />
                        </Border>
                    </VerticalStackLayout>

                    <Button
                        Grid.Column="1"
                        Command="{Binding InsertRequirementCommand}"
                        HeightRequest="60"
                        Style="{StaticResource ProfilePageButton}"
                        Text="Dodaj wymaganie"
                        WidthRequest="250" />
                </Grid>

                <VerticalStackLayout Grid.Row="4">
                    <ListView ItemsSource="{Binding JobOfertRequirements}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <VerticalStackLayout>
                                        <Label Text="{Binding RequirementName}" />
                                    </VerticalStackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>

                <Grid Grid.Row="5" ColumnDefinitions="*,auto">
                    <VerticalStackLayout Grid.Column="0">
                        <Border Style="{StaticResource EntryBorder}">
                            <controlls:BorderlessEntry
                                HeightRequest="60"
                                Placeholder="Dodaj obowiÄ…zek"
                                Text="{Binding DutyNameLocal}" />
                        </Border>
                    </VerticalStackLayout>

                    <Button
                        Grid.Column="1"
                        Command="{Binding InsertDutyCommand}"
                        HeightRequest="60"
                        Style="{StaticResource ProfilePageButton}"
                        Text="Dodaj obowiÄ…zek"
                        WidthRequest="250" />
                </Grid>

                <VerticalStackLayout Grid.Row="6">
                    <ListView ItemsSource="{Binding JobOfertDuties}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <VerticalStackLayout>
                                        <Label Text="{Binding DutyName}" />
                                    </VerticalStackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>

                <Grid Grid.Row="7" ColumnDefinitions="*,auto">
                    <VerticalStackLayout Grid.Column="0">
                        <Border Style="{StaticResource EntryBorder}">
                            <controlls:BorderlessEntry
                                HeightRequest="60"
                                Placeholder="Dodaj przywilej"
                                Text="{Binding BenefitNameLocal}" />
                        </Border>
                    </VerticalStackLayout>

                    <Button
                        Grid.Column="1"
                        Command="{Binding InsertBenefitCommand}"
                        HeightRequest="60"
                        Style="{StaticResource ProfilePageButton}"
                        Text="Dodaj przywilej"
                        WidthRequest="250" />
                </Grid>

                <VerticalStackLayout Grid.Row="8">
                    <ListView ItemsSource="{Binding JobOfertBenefits}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <VerticalStackLayout>
                                        <Label Text="{Binding BenefitName}" />
                                    </VerticalStackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>

                <Button
                    Grid.Row="9"
                    Margin="0,0,0,100"
                    Command="{Binding InsertJobOfertCommand}"
                    HeightRequest="60"
                    Style="{StaticResource ProfilePageButton}"
                    Text="Dodaj ofertÄ™ pracy" />
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>