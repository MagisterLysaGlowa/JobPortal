<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="JobPortal.Maui.Pages.WelcomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:JobPortal.Maui.ViewModels"
    Title="WelcomePage"
    x:DataType="viewmodels:WelcomePageViewModel">
    <VerticalStackLayout>
        <Label
            FontSize="25"
            HorizontalTextAlignment="Center"
            Text="WELCOME TO JOB PORTAL APP"
            TextColor="MediumPurple" />
        <Button
            Command="{Binding NavigateLoginPageCommand}"
            FontAttributes="Bold"
            MaximumWidthRequest="300"
            Text="Zaloguj się"
            TextColor="White" />
        <Button
            Command="{Binding NavigateRegisterPageCommand}"
            FontAttributes="Bold"
            MaximumWidthRequest="300"
            Text="Zarejestruj się"
            TextColor="White" />
    </VerticalStackLayout>
</ContentPage>